{% extends 'layout.twig' %}

{% block content %}
    <div class="supsystic-item">
        <div class="overtable-buttons">
            {% block toolbar %}
                <form action="{{ environment.generateUrl('projects', 'add') }}"
                      method="post">
                    <input id="projectTitle" class="regular-text" type="text"
                           name="title"
                           placeholder="{{ environment.translate('Project title') }}"/>
                    <!-- /#projectTitle.regular-text -->
                    <button type="submit" class="button">
                        <i class="fa fa-save"></i>
                        {{ environment.translate('Save') }}
                    </button>
                    <!-- /.button -->
                </form>
            {% endblock %}
        </div>
        <!-- /.overtable-buttons -->

        {% block inner_content %}
            <div class="scrollable-content">
                <div class="scrollable-inner">
                    <div class="scroll" data-navigation="main">
                        <h2>
                            <span style="vertical-align: middle;">
                                {{ environment.translate('Networks to show') }}
                            </span>
                            <button class="button" id="addNetwork" style="margin: 5px; vertical-align: middle;">
                                <i class="fa fa-fw fa-plus"></i>
                                <!-- /.fa fa-fw fa-plus -->
                                {{ environment.translate('Add Networks') }}
                            </button>
                            <!-- /#addNetwork.button -->
                        </h2>
                        <div class="clear"></div>
                        <!-- /.clear -->
                        <div id="nonetworks" style="color: red; display: none;">Please, select social networks using "Add Networks" button</div>
                        <form id="networks" action="{{ environment.getConfig().get('ajax_url') }}" method="post">
                            <div class="networks">
                                <input name="action" value="social-sharing"
                                       type="hidden"/>
                                <input name="route[module]" value="networks"
                                       type="hidden"/>
                                <input name="route[action]" value="addToProject"
                                       type="hidden"/>
                                <input name="project_id"
                                       value="{{ project.id }}" type="hidden"/>

                                {% import '@projects/helpers.twig' as helpers %}

                                {% for network in project.networks %}
                                    {% if network.id is not null %}
                                        <div class="network"
                                             id="network{{ network.id }}">
                                            <a class="delete" href="#">
                                                <i class="fa fa-fw fa-times"></i>
                                                <!-- /.fa fa-fw fa-times -->
                                            </a>
                                            <!-- /.delete -->
                                            <span class="title">{{ network.name }}</span>
                                            <!-- /.title -->
                                            <input name="networks[]"
                                                   value="{{ network.id }}"
                                                   type="hidden"/>

                                            {{ helpers.networkSettings(network, [], environment ) }}
                                        </div>
                                        <!-- /#network{{ network.id }}.network -->
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <!-- /.networks -->
                            <div id="savingNetworksSorting" style="text-align:center;display: none;">
                                <i class="fa fa-fw fa-spin fa-circle-o-notch"></i>
                                <!-- /.fa fa-fw fa-spin fa-circle-o-notch -->
                                {{ environment.translate('Saving networks sort order...') }}
                            </div>
                            <!-- /#savingNetworksSorting -->
                        </form>
                        <!-- /#networks -->

                    </div>
                    <!-- /.scroll -->

                    <form id="settings" action="{{ environment.getConfig().get('ajax_url') }}">

                        <input name="id" type="hidden" value="{{ project.id }}"/>
                        <input name="action" type="hidden" value="social-sharing"/>
                        <input name="route[module]" type="hidden" value="projects"/>
                        <input name="route[action]" type="hidden" value="save"/>
                        <input name="settings[popup_id]" id="popupId" value="{{ project.settings.popup_id | default(0) }}" type="hidden"/>
                        <input name="settings[map_id]" id="gmapId" value="{{ project.settings.map_id | default(0) }}" type="hidden"/>

                        <div class="scroll" data-navigation="design" hidden>
                            <div class="half-page-left" style="float: left; width: 50%; padding-right: 25px;">
                                <h2>
                                    {{ environment.translate('Buttons Design') }}
                                </h2>
                                <span id="choose-buttons-template" class="button">
                                    {{ environment.translate('Choose Template') }}
                                </span>
                                {#<select id="buttonSet">#}
                                    {#{% for set in button_sets %}#}
                                        {#<option value="{{ set.getLowerCaseName() }}">{{ set.getName() }}</option>#}
                                        {#{% if environment.isPro() == false %}#}
                                            {#<option value="mono">{{ environment.translate('Mono') }} ({{ environment.translate('Available in PRO') }})</option>#}
                                            {#<option value="bordered">{{ environment.translate('Bordered') }} ({{ environment.translate('Available in PRO') }})</option>#}
                                        {#{% endif %}#}
                                    {#{% endfor %}#}
                                {#</select>#}

                                {% import '@projects/macro/preview.twig' as preview %}

                                <table class="form-table form" id="buttonSets" style="float: left; width: 100%;">
                                    <tbody>
                                        {% block preview_buttons %}
                                            {% for set in button_sets %}
                                                {{ preview.build(project, set.getLowerCaseName(), templates, set.getNumberOfStyles(), set.getStylesWithText()) }}
                                            {% endfor %}
                                            {% if environment.isPro() == false %}
                                                <tr style="display:none;" data-builder="mono">
                                                    <th scope="row">
                                                        <img src="{{ plugin_directory_url('app/assets/img/mono_preview.png') }}" alt="Mono" style="width: 100%; height: auto; overflow: hidden; max-width: 611px;">
                                                    </th>
                                                </tr>
                                                <tr style="display:none;" data-builder="bordered">
                                                    <th scope="row">
                                                        <img src="{{ plugin_directory_url('app/assets/img/bordered_preview.png') }}" alt="Bordered" style="width: 100%; height: auto; overflow: hidden; max-width: 456px;">
                                                    </th>
                                                </tr>
                                            {% endif %}
                                        {% endblock %}
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.form-table form -->
                            <div class="half-page-right" style="display: inline-block; width: 50%;">
                                <h2 style="margin-bottom: 20px;">{{ environment.translate('Preview') }}</h2>
                                <div id="button-preview-example-wrapper" class="supsystic-social-sharing supsystic-social-sharing-preview" data-overlay="{{ project.settings.overlay_with_shadow }}" style="text-align: center; padding: 40px 0; border-bottom: 1px solid rgb(200, 200, 200); display: inline-block; width: 100%;">
                                </div>
                                <table class="form-table form" style="display: inline-block; width: 100%;">
                                    <tbody>
                                    <tr>
                                        <th scope="row">
                                            <label for="bd-spacing" data-toggle="tooltip" data-original-title="{{ environment.translate('Adds space between the buttons.') }}">
                                                {{ environment.translate('Add button spacing') }}
                                                <i class="fa fa-question location-tooltip" title="{{ tooltips['spacing-tooltip'] }}"></i>
                                            </label>
                                        </th>
                                        <td>
                                            <input type="checkbox"
                                                   name="settings[spacing]"
                                                   {% if project.settings.spacing == 'on' %}checked="checked" {% endif %}
                                                   id="bd-spacing"/>
                                            <!-- /#bd-spacing -->
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">
                                            <label for="bd-buttons-size" data-toggle="tooltip" data-original-title="{{ environment.translate('Choose the size for social buttons. This option allows you to accent the attention for as much as you want it.') }}">
                                                {{ environment.translate('Buttons size') }}
                                                <i class="fa fa-question location-tooltip" title="{{ tooltips['buttons-size'] }}"></i>
                                            </label>
                                        </th>
                                        <td>
                                            <select name="settings[buttons_size]" id="bd-buttons-size">
                                                <option value="0.5" {% if project.settings.buttons_size == '0.5' %}selected="selected"{% endif %}>{{ environment.translate('Smallest') }}</option>
                                                <option value="0.7" {% if project.settings.buttons_size == '0.7' %}selected="selected"{% endif %}>{{ environment.translate('Small') }}</option>
                                                <option value="1" {% if project.settings.buttons_size | default(1) == '1' %}selected="selected"{% endif %}>{{ environment.translate('Normal') }}</option>
                                                <option value="1.2" {% if project.settings.buttons_size == '1.2' %}selected="selected"{% endif %}>{{ environment.translate('Big') }}</option>
                                                <option value="1.5" {% if project.settings.buttons_size == '1.5' %}selected="selected"{% endif %}>{{ environment.translate('Biggest') }}</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">
                                            <label for="bd-display-total-shares" data-toggle="tooltip" data-original-title="{{ environment.translate('Displays counters of social shares on buttons.') }}">
                                                {{ environment.translate('Display counters') }}
                                                <i class="fa fa-question location-tooltip" title="{{ tooltips['display-counters'] }}"></i>
                                            </label>
                                        </th>
                                        <td>
                                            <input type="checkbox"
                                                   name="settings[display_total_shares]"
                                                   id="bd-display-total-shares"
                                                   {% if project.settings.display_total_shares == 'on' %}checked="checked"{% endif %}/>
                                        </td>
                                    </tr>
                                    <tr {% if project.settings.display_total_shares != 'on' %}style="display:none"{% endif %}>
