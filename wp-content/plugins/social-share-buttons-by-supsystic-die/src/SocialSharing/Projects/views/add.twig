                                            <label for="bd-display-total-shares" data-toggle="tooltip" data-original-title="{{ environment.translate('Displays counters of social shares on buttons.') }}">
                                                {{ environment.translate('Display total counter') }}
                                            </label>
                                        </th>
                                        <td>
                                            <input type="checkbox"
                                                   name="settings[display_all_total_shares]"
                                                   id="bd-display-total-shares"
                                                   {% if project.settings.display_all_total_shares == 'on' %}checked="checked"{% endif %}/>
                                        </td>
                                    </tr>

                                    <tr {% if project.settings.display_total_shares != 'on' %}style="display:none"{% endif %}>
                                        <th scope="row">
                                            <label for="bd-shares-style">
                                                {{ environment.translate('Counter style') }}
												<i class="fa fa-question location-tooltip" title="{{ tooltips['counter-style'] }}"></i>
                                            </label>
                                        </th>
                                        <td>
                                            <select id="bd-shares-style" name="settings[shares_style]">
                                                {% for value in ['standard', 'arrowed', 'white-arrowed'] %}
                                                    <option value="{{ value }}" {% if project.settings.shares_style == value %}selected{% endif %}>{{ value | title }}</option>
                                                {% endfor %}
                                            </select>
                                        </td>
                                    </tr>

                                    <tr>
                                        <th scope="row">
                                            <label for="bd-counter-show-after">
                                                {{ environment.translate('Show counter after the number of shares') }}
                                            </label>
                                        </th>
                                        <td>
                                            <input type="text" name="settings[show_counter_after]" id="bd-counter-show-after" value="{{ project.settings.show_counter_after | default(0) }}">
                                        </td>
                                    </tr>

                                    <tr>
                                        <th scope="row">
                                            <label for="bd-counter-show-after">
                                                {{ environment.translate('Text after buttons') }}
                                            </label>
                                        </th>
                                        <td>
                                            <input type="text" name="settings[text_after_buttons]" id="bd-text-after-buttons" value="{{ project.settings.text_after_buttons }}">
                                        </td>
                                    </tr>

                                    <tr>
                                        <th scope="row">
                                            <label for="bd-counter-type" data-toggle="tooltip" data-original-title="{{ environment.translate('Choose from what exactly to count the shares â€“ the all projects, the entire project, the each page.') }}">
                                                {{ environment.translate('Show numbers from') }}
                                            </label>
                                        </th>
                                        <td>
                                            <select name="settings[shares]"
                                                    id="bd-counter-type">
                                                {% for value, description in { 'plugin': environment.translate('The all projects'), 'project': environment.translate('The entire project'), 'post': environment.translate('The each page') } %}
                                                    <option value="{{ value }}" {% if project.settings.shares | default('post') == value %}selected="selected"{% endif %}>{{ description }}</option>
                                                {% endfor %}
                                            </select>
                                            <!-- /#bd-counter-type -->
                                        </td>
                                    </tr>

                                    <tr>
                                        <th scope="row">
                                            <label for="bd-use-short-numbers" data-toggle="tooltip" data-original-title="{{ environment.translate('Rounds up big numbers of counters and displays the short numbers. Available only with enabled "Display counters" option.') }}">
                                                {{ environment.translate('Use short numbers') }}
                                                <i class="fa fa-question location-tooltip" title="{{ tooltips['use-short-numbers'] }}"></i>
                                            </label>
                                        </th>
                                        <td>
                                            <input type="checkbox"
                                                   name="settings[short_numbers]"
                                                   id="bd-use-short-numbers"
                                                   {% if project.settings.display_total_shares is not defined %}disabled="disabled"{% endif %}
                                                    {% if project.settings.short_numbers == 'on' %}checked="checked"{% endif %}/>
                                            <!-- /#bd-use-short-numbers -->
                                        </td>
                                    </tr>

                                    <tr id="gradient-mode-row">
                                        <th scope="row">
                                            <label for="bd-gradient">
                                                {{ environment.translate('Enable gradient mode') }}
                                                <i class="fa fa-question location-tooltip" title="{{ tooltips['grad-mode'] }}"></i>
                                            </label>
                                        </th>
                                        <td>
                                            <input id="bd-gradient" type="checkbox" name="settings[grad]" {% if project.settings.grad == 'on' %}checked{% endif %}>
                                        </td>
                                    </tr>

                                    <tr id="overlay-with-shadow-row">
                                        <th scope="row">
                                            <label for="bd-overlay-with-shadow">
                                                {{ environment.translate('Overlay with shadow') }}
												<i class="fa fa-question location-tooltip" title="{{ tooltips['overlay-shadow'] }}"></i>
                                            </label>
                                        </th>
                                        <td>
                                            <input type="checkbox"
                                                   name="settings[overlay_with_shadow]"
                                                   id="bd-overlay-with-shadow"
                                                   {% if project.settings.overlay_with_shadow == 'on' %}checked="checked"{% endif %}/>
                                        </td>
                                    </tr>
                                    {#<tr>#}
                                        {#<th scope="row">#}
                                            {#<label for="bd-change-size">#}
                                                {#{{ environment.translate('Change size') }}#}
												{#<i class="fa fa-question location-tooltip" title="{{ tooltips['change-size'] }}"></i>#}
                                            {#</label>#}
                                        {#</th>#}
                                        {#<td>#}
                                            {#<input type="checkbox"#}
                                                   {#name="settings[change_size]"#}
                                                   {#id="bd-change-size"#}
                                                   {#{% if project.settings.change_size == 'on' %}checked="checked"{% endif %}/>#}
                                        {#</td>#}
                                    {#</tr>#}

                                    <tr>
                                        {% set animations = ['no-animation', 'pulse', 'rubberBand', 'shake', 'swing', 'tada', 'wobble', 'difuz'] %}
                                        <th scope="row">
                                            <label for="ba-button-animation">
                                                {{ environment.translate('Buttons animation') }}
                                            </label>
                                        </th>
                                        <td>
                                            <button id="buttons-animation" class="button button-primary">
                                                <i class="fa fa-camera"></i>
                                                {{ environment.translate('Choose Animation') }}
                                            </button>

                                            <select name="settings[buttons_animation]"
                                                    id="ba-button-animation" hidden>
                                                {% for animation in animations %}
                                                    <option value="{{ animation }}"
                                                            {% if project.settings.buttons_animation == animation %}
                                                        selected="selected"
                                                            {% endif %}>
                                                        {{ animation }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">
                                            <label for="ba-icons-animation">
                                                {{ environment.translate('Icons animation') }}
                                            </label>
                                        </th>
                                        <td>
                                            <button id="icons-animation" class="button button-primary">
                                                <i class="fa fa-eye"></i>
                                                {{ environment.translate('Choose Animation') }}
                                            </button>

                                            <select name="settings[icons_animation]"
                                                    id="ba-icons-animation" hidden>
                                                {% for animation in animations %}
                                                    <option value="{{ animation }}"
                                                            {% if project.settings.icons_animation == animation %}
                                                        selected="selected"
                                                            {% endif %}>
                                                        {{ animation }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>

