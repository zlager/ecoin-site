                                </tr>
                                </tbody>
                            </table>
                            <!-- /.form-table form -->
                        </div>
                        <!-- /.scroll -->

                        <div class="scroll" data-navigation="statistic" hidden>
                            {% import '@shares/statistic.twig' as shares %}
                            {{ shares.show(statistics_options) }}
                        </div>
                        <!-- /.scroll -->
                    </form>

                    <!-- /.scroll -->
                    <div class="clear"></div>
                    <!-- /.clear -->
                </div>
                <!-- /.scrollable-inner -->
            </div>
            <!-- /.scrollable-content -->
        {% endblock inner_content %}
        <div id="networks-dialog"
             title="{{ environment.translate('Select network') }}"
             style="padding: 10px; display: none;">
            <div class="buttons-helpers" style="margin: 10px;">
                <button class="ui-button select-all" style="margin-bottom: 10px; float: right;">
                    <i class="fa fa-check"></i>
                    {{ environment.translate('Select All') }}
                </button>
            </div>
            {% for network in networks %}
                <div>
                    <label for="network{{ network.id }}-checkbox">
                        <input type="checkbox" name="networks"
                                value="{{ network|json_encode }}"
                                id="network{{ network.id }}-checkbox" {% if network | json_encode in project.networks | json_encode %}checked="checked"{% endif %}/>
                        <!-- /#network-{{ network.id }} -->
                        <span>{{ network.name }}</span>
                    </label>
                </div>
            {% endfor %}
        </div>
        <!-- /#networks-dialog -->

        <!-- select design dialog start -->
        <div class="supsystic-plugin"
              id="select-design-dialog"
             title="{{ environment.translate('Select design') }}"
             style="padding: 10px; display: none; margin-top: 0;">

            <div class="button-design-preview-wrapper" style="height: auto">
                {% for preview in buttons_preview %}
                    <div class="button-design-preset {% if preview.free == false %}not-pro{% endif %}" data-design="{{ preview.design }}" style="float: left;">
                        {#<h3 style="display: inline-block;">{{ preview.title }}</h3>#}
                        {% if preview.free == false %}

                        {% endif %}
                        <br/>
                        <div style="height: 350px; width: 420px; position: relative;">
                            <img src="{{ preview.img_url }}"/>
                            <div style="position: absolute; top: 50%; left: 50%; transform:translate(-50%, -50%); display:table;">
                                {% if preview.free == false %}
                                    <button class="button button-primary" style="background-color: #ffffff;">
                                        {{ environment.translate('Available in PRO') }}
                                    </button>
                                {% else %}
                                    <button class="button button-primary button-select" style="background-color: #ffffff;">
                                        {{ environment.translate('Select') }}
                                    </button>
                                    <span class="selected-button-design-preset">{{ environment.translate('Selected') }}</span>
                                {% endif %}
                            </div>

                            <div class="button-design-preset-overlay">
                                <h3>{{ preview.title|title }}</h3>
                            </div>
                        </div>

                    </div>
                {% endfor %}
            </div>
            <div class="clear"></div>

        </div>
        <!-- select design dialog end -->

        {% import 'dialogs.twig' as dialogs %}
        {{ dialogs.buttonsAnimation(['no-animation', 'pulse', 'rubberBand', 'shake', 'swing', 'tada', 'wobble'], project.settings.buttons_animation) }}
        {{ dialogs.iconsAnimation(['no-animation', 'pulse', 'rubberBand', 'shake', 'swing', 'tada', 'wobble'], project.settings.icons_animation) }}
        {% if environment.isPro() != 'true' %}
            {{ dialogs.contentLockPromo() }}
            {{ dialogs.proAd() }}
        {% endif %}
    </div>
    <!-- /.supsystic-item -->

{% endblock %}
